<dl class="dl-horizontal">
    <dt><%= Russian::strftime(message.created_at, "%d %B %Y %H:%M") %></dt>
    <dt>
        <% if current_user.admin_manager? %>
            <% if message.answer %>
                <%= link_to 'Обработана'.html_safe, answer_message_path(message), :class => "green", method: :put %>
            <% else %>
                <%= link_to 'Новая заявка', answer_message_path(message), :class => "red", method: :put %>
            <% end %>
        <% end %>
    </dt>
    <dt>
        <%= link_to "Удалить", message, method: :delete, :class => "red", data: { confirm: "Вы уверены?" } if current_user.admin? %>
    </dt>
    <dd>
        <%= message.name %>
    </dd>
    <dd>
        <%= message.email %>
    </dd>
    <dd>
        <%= message.phone %>
    </dd>
    <dd>
        <%= message.text %>
    </dd>
</dl>
<% provide(:title, "Добавить организацию") %>
<!--=== Breadcrumbs ===-->
<div class="breadcrumbs margin-bottom-40">
  <div class="container">
        <h1 class="color-green pull-left">Добавить организацию</h1>
        <ul class="pull-right breadcrumb">
            <li><a href="index.html">Главная</a> <span class="divider">/</span></li>
            <li class="active">Добавить организацию</li>
        </ul>
    </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->

<div class="container"> 

        <%= render 'shared/usermenu' %><br>

      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "alert alert-#{key}") %>
      <% end %>
  
   <%= form_for(@agent) do |f| %>

     <div class="span5 area">
        <%= f.label :name, "Наименование организации" %>
        <%= f.text_field :name %>
         </div>
         <div class="span5 area"> 
        <%= f.label :email, "Адрес электронной почты" %>
        <%= f.text_field :email %>
     </div>

         <div class="span5 area">
        <%= f.label :phone, "Телефон ответственного" %>
        <%= f.text_field :phone %>
         </div>
         <div class="span5 area"> 
        <%= f.label :director, "ФИО ответственного" %>
        <%= f.text_field :director %>
     </div>


<div class="row-fluid">
        <div class="span4">
        <%= f.label :sum, "Сумма по договору" %>
        <%= f.text_field :sum, :class => "input-xxlarge" %>
        </div></div>
<div class="row-fluid">
        <div class="span12">
        <%= f.label :dagovor_date, "Дата заключения договора" %>
        <%= f.date_select :dogovor_date %>
        </div>
      <%= f.submit "Подать заявку", class: "btn-u" %>
    <% end %>
</div>
</div>
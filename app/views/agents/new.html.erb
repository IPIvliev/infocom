<% provide(:title, "Добавить организацию") %>
<!--=== Breadcrumbs ===-->
<div class="breadcrumbs margin-bottom-40">
  <div class="container">
        <h1 class="color-green pull-left">Добавить организацию</h1>
        <ul class="pull-right breadcrumb">
            <li><a href="/index.html">Главная</a> <span class="divider">/</span></li>
            <li class="active">Добавить организацию</li>
        </ul>
    </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->

<div class="container"> 

        <%= render 'shared/usermenu' %><br>

      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "alert alert-#{key}") %>
      <% end %>
  
<div class="row-fluid">
    <aside class="span3">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
    </aside>

    <div class="span9">

   <%= form_for(@agent) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<strong>Организация</strong>
  <div class="well well-small">
    <%= f.text_field :name, :placeholder => "Наименование организации" %>
  </div> 

<strong>Координаты:</strong>
  <div class="well well-small">
    <p><%= f.text_field :email, :placeholder => "Электронная почта" %></p>
    <p><%= f.text_field :phone, :placeholder => "Телефон организации" %></p>
    <p><%= f.text_field :fax, :placeholder => "Факс" %></p>
  </div>  

<strong>Ответственное лицо:</strong>
  <div class="well well-small">
    <p><%= f.text_field :dealer, :placeholder => "ФИО" %></p>
    <p><%= f.text_field :dealer_phone, :placeholder => "Телефон" %></p>
    <p><%= f.text_field :dealer_email, :placeholder => "Электронная почта" %></p>
  </div>

<strong>Договор:</strong>
  <div class="well well-small">
      <div class="input-append">
        <%= f.text_field :sum, :class => "input-xxlarge", :placeholder => "Стоимость договора" %>
        <span class="add-on">руб.</span>
      </div>
    <p>
      <strong>Дата заключения:</strong>
      <%= f.date_select :dogovor_date %>
    </p>
  </div>

  <%= f.submit "Добавить организацию", class: "btn-u" %>
  <% end %>

</div>
</div>
</div>
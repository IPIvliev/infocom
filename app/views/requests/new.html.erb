<% provide(:title, "Подать заявку") %>
<!--=== Breadcrumbs ===-->
<div class="breadcrumbs margin-bottom-40">
  <div class="container">
        <h1 class="color-green pull-left">Подать заявку</h1>
        <ul class="pull-right breadcrumb">
            <li><a href="/index.html">Главная</a> <span class="divider">/</span></li>
            <li class="active">Подать заявку</li>
        </ul>
    </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->
    <%= render 'shared/usermenu' %>



<div class="container"> 
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "alert alert-#{key}") %>
      <% end %>
  
<div class="row-fluid">
    <aside class="span3">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
    </aside>

    <div class="span9">
   <%= form_for(@request) do |f| %>

<% if signed_in? %>

        <%= f.hidden_field :name, :value=>current_user.name %>

        <%= f.hidden_field :email, :value=>current_user.email %>

        <%= f.hidden_field :phone, :value=>current_user.phone %>

        <%= f.hidden_field :who, :value=>current_user.agent_id %>


<% else %>
         <div class="span5 area">
        <%= f.label :name, "Ваше имя" %>
        <%= f.text_field :name, :value=>current_user.name %>
         </div>
         <div class="span5 area"> 
        <%= f.label :email, "Адрес электронной почты" %>
        <%= f.text_field :email %>
     </div>

         <div class="span5 area">
        <%= f.label :phone, "Ваш телефон" %>
        <%= f.text_field :phone %>
         </div>
         <div class="span5 area"> 
        <%= f.label :who, "Название организации" %>
        <%= f.text_field :who %>
     </div>
<% end %>


<div class="row-fluid">
        <div class="span4">
        <%= f.label :address, "Адрес проведения работ" %>
        <%= f.text_field :address, :class => "input-xxlarge", :value => current_user.address %>
        </div></div>
<div class="row-fluid">
        <div class="span12">
        <%= f.label :text, "Опишите вашу проблему" %>
        <%= f.text_area :text, :class => "all" %>
        </div>
      <%= f.submit "Подать заявку", class: "btn-u" %>
    <% end %>
</div>

</div>
</div>
</div>
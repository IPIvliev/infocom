<% provide(:title, "Добавить пост в блог") %>
<!--=== Breadcrumbs ===-->
<div class="breadcrumbs margin-bottom-40">
  <div class="container">
        <h1 class="color-green pull-left">Добавить организацию</h1>
        <ul class="pull-right breadcrumb">
            <li><a href="index.html">Главная</a> <span class="divider">/</span></li>
            <li class="active">Добавить пост</li>
        </ul>
    </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->

<div class="container"> 

        <%= render 'shared/usermenu' %><br>

      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "alert alert-#{key}") %>
      <% end %>
  
   <%= form_for(@post) do |f| %>

<div class="row-fluid">
        <div class="span4">
        <%= f.label :name, "Название" %>
        <%= f.text_field :name, :class => "input-xxlarge" %>
        </div></div>
<div class="row-fluid">
        <div class="span12">
        <%= f.label :text, "Текст поста" %>
        <%= f.text_area :text, :class => "all" %>
        </div>
      <%= f.submit "Подать заявку", class: "btn-u" %>
    <% end %>
</div>
</div>
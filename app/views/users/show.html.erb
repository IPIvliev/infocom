
<% provide(:title, 'Профайл') %>

<% if signed_in? %>
<!--=== Breadcrumbs ===-->
<div class="row-fluid breadcrumbs margin-bottom-20">
  <div class="container">
        <h1 class="pull-left">Личный кабинет</h1>
        <ul class="pull-right breadcrumb">
            <li><a href="/index.html">Главная</a> <span class="divider">/</span></li>
            <li><%= link_to "Все пользователи", users_path %> <span class="divider">/</span></li>
            <li class="active"><%= @user.name %></li>
        </ul>
    </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->
    <%= render 'shared/usermenu' %>
  <div class="container"> 
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "alert alert-#{key}") %>
    <% end %>  
    <div class="row-fluid">
      <aside class="span3">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/stats' %>
        </section>
      </aside> 
      <div class="span9">

<strong>ФИО:</strong>
  <div class="well well-small">
<p><%= @user.name %></p>
  </div>

<strong>Контактыне данные:</strong>
  <div class="well well-small">
<p><strong>E-mail:</strong> <%= @user.email %></p>
<p><strong>Телефон:</strong> <%= @user.phone %></p>
  </div>

<strong>Организация:</strong>
  <div class="well well-small">
<p><strong>Наименование:</strong> <%= link_to  @user.agent.name, agent_path(@user.agent) %></p>
<p><strong>Адрес:</strong> <%= @user.address %></p>
  </div>

</div></div></div>
<% end %>
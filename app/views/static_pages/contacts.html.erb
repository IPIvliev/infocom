 <script src="http://api-maps.yandex.ru/2.0-stable/?load=package.standard&lang=ru-RU" type="text/javascript"></script>
<script type="text/javascript">
  ymaps.ready(init);
    var myMap,
        myPlacemark;

    function init(){     
        myMap = new ymaps.Map ("map", {
            center: [56.290711, 44.000145],
            zoom: 16,
        });

        myPlacemark = new ymaps.Placemark([56.290711, 44.000145], { 
            hintContent: 'Нижний Новгород, ул. Бекетова, д.15, оф.4', 
            balloonContent: 'ООО Инфоком-НН' 
        });

        myMap.geoObjects.add(myPlacemark);
    }
</script>